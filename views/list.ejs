<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>
    
    <div class="box">
        <form action="/delete" method="post">
            
            <% items.forEach(function(item) { %>
            
                <div class="item">
                    <input type="checkbox" name="checkedId" value="<%= item._id %>" onchange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
                
            <% }) %>   
            <input type="hidden" name="listName" value="<%= listTitle %>"> 
        </form>
        
        <form class="item" action=<%= route %> method="post">
            <input autocomplete="off" type="text" name="newList" placeholder="Add New ToDo List">
            <button type="submit" name="listName" value="<%= listTitle %>">+</button>
        </form>
    </div>
    
<%- include("footer") -%>
